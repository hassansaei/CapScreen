{
    "config_path": "/opt/capscreen/capscreen/config.json",
    "threads": 4,
    "log_level": "INFO",
    "reference": {
        "genome": "/opt/capscreen/reference/reference_aav2",
        "index_basename": "/opt/capscreen/reference/reference_aav2",
        "library": "/opt/capscreen/reference/library.csv"
    },
    "fastp": {
        "compression": 6,
        "length_required": 50,
        "dup_calc_accuracy": 3,
        "html_report": true,
        "json_report": true,
        "output_prefix": "fastp"
    },
    "pear": {
        "min_overlap": 10,
        "max_assembly_length": 1000,
        "min_assembly_length": 50,
        "quality_threshold": 15,
        "p_value": 0.01,
        "output_prefix": "pear"
    },
    "bowtie2": {
        "mode": "end-to-end",
        "sensitivity": "very-sensitive",
        "np": 0,
        "n_ceil": "L,0,0.8",
        "xeq": true,
        "N": 1,
        "reorder": true,
        "score_min": "L,-0.6,-0.6",
        "output_prefix": "aligned"
    },
    "samtools": {
        "sort_memory": "16G",
        "compression_level": 6
    },
    "flanking_sequences": {
        "flank_5p": "TTGAAAAGGTCATGATTACA",
        "flank_3p": "CAAGCAGCTACCGCAGATGT",
        "description": "Flanking sequences for variable region extraction"
    },
    "output": {
        "create_subdirectories": true,
        "prefix": "processed_"
    },
    "html_template": "capscreen/templates/template_report.html",
    "show_count_matrix": true,
    "show_histogram": true,
    "keep_intermediate": false,
    "statistical_analysis": {
        "analysis": {
            "n_cpus": 8,
            "lambda": 0.01,
            "low_expression_threshold": 10,
            "pca": {
                "n_components": 2,
                "random_state": 0,
                "top_n_features": 500
            }
        },
        "differential_expression": {
            "padj_threshold": 0.05,
            "log2fc_threshold": 1.0
        },
        "plots": {
            "scatter_highlight_top_n": 60,
            "bar_plot_top_n": 30,
            "dpi": {
                "standard": 300,
                "heatmap": 600
            },
            "figure_sizes": {
                "scatter": [6, 6],
                "bar": [6, 6],
                "rpm_scatter": [6, 4],
                "pca": [6, 5],
                "heatmap": [10, 10]
            },
            "scatter": {
                "all_points_size": 10,
                "all_points_alpha": 0.4,
                "highlighted_size": 40,
                "enable_highlighting": false
            },
            "pca": {
                "point_size": 120,
                "fontsize": 10
            },
            "fontsize": 10
        },
        "colors": {
            "target": "#d62728",
            "background_bead": "#1f77b4",
            "background_bead_fc": "#ff7f0e",
            "gray": "#808080",
            "highlight": "#d62728"
        }
    }
}